<div class="container">
    <div class="row">
      <% @products.each do |product| %>
      <div class="col-sm-2 col-md-4">
        <%= image_tag(product.image_url, class: "img-responsive")%>
        <h1><%=product.name%></h1>
        <p><%=product.description%></p>
        <p><%=product.color%></p>
        <p><strong><%=product.price%></strong><p>
      </div>
      <% end %>
    </div>
  </div>  